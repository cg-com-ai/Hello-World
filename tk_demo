import tkinter as tk
from tkinter import messagebox

def say_hello():
    messagebox.showinfo("訊息", "哈囉，這是 Tkinter！")

# 建立主視窗
root = tk.Tk()
root.title("Tkinter 範例")
root.geometry("300x200")

# 建立按鈕
button = tk.Button(root, text="點我", command=say_hello)
button.pack(pady=50)

# 執行主迴圈
root.mainloop()
