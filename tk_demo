import tkinter as tk

# 建立主視窗
root = tk.Tk()
root.title("Tkinter 範例")
root.geometry("300x200")

# 建立 Label（多行文字）
label = tk.Label(
    root,
    text="這是第一行範例文字\n這是第二行範例文字\n這是第三行範例文字",
    font=("Microsoft JhengHei UI", 16),
    justify="left"  # 讓文字靠左對齊
)
label.pack(pady=20)  # 加一些上下間距

# 啟動主迴圈
root.mainloop()
